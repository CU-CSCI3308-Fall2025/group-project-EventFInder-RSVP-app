<div class="container py-4">
  <!-- User Profile Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div></div>
            <h2 class="card-title mb-0">
              <i class="bi bi-person-circle"></i> User Profile
            </h2>
            <a href="/logout" class="btn btn-danger">
              <i class="bi bi-box-arrow-right"></i> Logout
            </a>
          </div>
          <hr />
          <div class="row">
            <div class="col-md-6">
              <h5 class="text-muted">Username</h5>
              <p class="fs-5">{{username}}</p>
            </div>
            <div class="col-md-6">
              <h5 class="text-muted">Email</h5>
              <p class="fs-5">{{email}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- My RSVPs Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="bi bi-calendar-check"></i> My RSVPs
          </h4>
        </div>
        <div class="card-body">
          {{#if userRsvps.length}}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Event</th>
                    <th>Location</th>
                    <th>Date & Time</th>
                    <th>Guests</th>
                    <th>RSVP Date</th>
                    <th>Notes</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each userRsvps}}
                    <tr>
                      <td>
                        <strong>{{this.event_title}}</strong>
                      </td>
                      <td>{{this.event_location}}</td>
                      <td>
                        {{#if this.event_start_time}}
                          {{this.event_start_time}}
                        {{else}}
                          N/A
                        {{/if}}
                      </td>
                      <td>
                        <span class="badge bg-info">{{this.guests}}</span>
                      </td>
                      <td>{{this.submitted_at}}</td>
                      <td>
                        {{#if this.notes}}
                          <span
                            class="text-muted"
                            data-bs-toggle="tooltip"
                            title="{{this.notes}}"
                          >
                            <i class="bi bi-chat-left-text"></i>
                          </span>
                        {{else}}
                          <span class="text-muted">-</span>
                        {{/if}}
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{else}}
            <div class="text-center py-5">
              <i class="bi bi-calendar-x fs-1 text-muted"></i>
              <p class="mt-3 text-muted">
                You haven't RSVP'd to any events yet.
              </p>
              <a href="/feed" class="btn btn-primary">
                <i class="bi bi-search"></i>
                Browse Events
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <!-- My Created Events Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">
            <i class="bi bi-calendar-plus"></i>
            My Created Events
          </h4>
        </div>
        <div class="card-body">
          {{#if userEvents.length}}
            {{#each userEvents}}
              <div class="card mb-3">
                <div class="card-header bg-light">
                  <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                      <i class="bi bi-calendar-event"></i>
                      {{this.title}}
                    </h5>
                    <span class="badge bg-success">
                      {{this.rsvps.length}}
                      {{#if (eq this.rsvps.length 1)}}RSVP{{else}}RSVPs{{/if}}
                    </span>
                  </div>
                </div>
                <div class="card-body">
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <p class="mb-1">
                        <strong>
                          <i class="bi bi-geo-alt"></i>
                          Location:
                        </strong>
                        {{this.location}}
                      </p>
                      <p class="mb-1">
                        <strong>
                          <i class="bi bi-clock"></i>
                          Start:
                        </strong>
                        {{this.start_time}}
                      </p>
                      <p class="mb-0">
                        <strong>
                          <i class="bi bi-clock-fill"></i>
                          End:
                        </strong>
                        {{this.end_time}}
                      </p>
                    </div>
                    <div class="col-md-6">
                      <p class="mb-0">
                        <strong>Description:</strong>
                      </p>
                      <p class="text-muted">{{this.description}}</p>
                    </div>
                  </div>

                  {{#if this.rsvps.length}}
                    <h6 class="border-top pt-3 mb-3">
                      <i class="bi bi-people"></i>
                      Attendees:
                    </h6>
                    <div class="table-responsive">
                      <table class="table table-sm table-striped">
                        <thead class="table-light">
                          <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Guests</th>
                            <th>Notes</th>
                            <th>RSVP Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each this.rsvps}}
                            <tr>
                              <td>{{this.name}}</td>
                              <td>{{this.email}}</td>
                              <td>
                                <span class="badge bg-info">{{this.guests}}</span>
                              </td>
                              <td>
                                {{#if this.notes}}
                                  <span
                                    class="text-muted small"
                                    data-bs-toggle="tooltip"
                                    title="{{this.notes}}"
                                  >
                                    <i class="bi bi-chat-left-text"></i>
                                  </span>
                                {{else}}
                                  <span class="text-muted">-</span>
                                {{/if}}
                              </td>
                              <td class="small">{{this.submitted_at}}</td>
                            </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  {{else}}
                    <div class="alert alert-info mb-0">
                      <i class="bi bi-info-circle"></i>
                      No one has RSVP'd to this event yet.
                    </div>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          {{else}}
            <div class="text-center py-5">
              <i class="bi bi-calendar-x fs-1 text-muted"></i>
              <p class="mt-3 text-muted">You haven't created any events yet.</p>
              <a href="/feed" class="btn btn-success">
                <i class="bi bi-plus-circle"></i>
                Create Your First Event
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize Bootstrap tooltips
  document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl);
    });
  });
</script>
