<style>
  body {
    background: #fafafa;
    font-family: Arial, sans-serif;
  }

  #rsvp-container {
    max-width: 500px;
    margin: 40px auto;
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }

  #rsvp-container h1 {
    margin-bottom: 10px;
  }

  label {
    font-weight: bold;
    margin-top: 10px;
    display: block;
  }

  input, textarea {
    width: 100%;
    padding: 8px;
    margin-top: 5px;
    margin-bottom: 15px;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  button.submit-btn {
    background-color: #007BFF;
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    border-radius: 6px;
    width: 100%;
    font-size: 16px;
  }

  button.submit-btn:hover {
    background-color: #0056b3;
  }

  #confirmation {
    display: none;
    margin-top: 20px;
    background: #e7f9e7;
    padding: 12px;
    border-radius: 6px;
    color: #2b7a0b;
    font-weight: bold;
    text-align: center;
  }
</style>

<div id="rsvp-container">
  <h1>RSVP for {{eventName}}</h1>
  <p><strong>Date:</strong> {{eventDate}}</p>
  <p><strong>Location:</strong> {{eventLocation}}</p>
  <p>Please fill out the form below to let us know if you can attend.</p>

  <form id="rsvp-form">
    <input type="hidden" id="event_id" name="event_id" value="{{eventId}}">
    <input type="hidden" id="event_name" name="event_name" value="{{eventName}}">
    <input type="hidden" id="event_location" name="event_location" value="{{eventLocation}}">
    <input type="hidden" id="event_date" name="event_date" value="{{eventDate}}">
    <label for="name">Full Name:</label>
    <input type="text" id="name" name="name" value="{{userName}}" readonly required style="background-color: #f0f0f0;">

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{userEmail}}" readonly required style="background-color: #f0f0f0;">

    <label for="guests">Number of Guests:</label>
    <input type="number" id="guests" name="guests" min="1" max="10">

    <label for="notes">Notes or Comments:</label>
    <textarea id="notes" name="notes" rows="3"></textarea>

    <button type="submit" class="submit-btn">Submit RSVP</button>
  </form>

  <div id="confirmation">
    üéâ Thank you! Your RSVP has been submitted.
  </div>
  <br><br>
  <button id="back-to-feed" class="submit-btn">Back to Feed</button>
</div>

<script>
document.getElementById("rsvp-form").addEventListener("submit", async (event) => {
  event.preventDefault();
  //get data for entry from the passed data

  // Convert event_date to proper ISO format for PostgreSQL
  let eventDate = document.getElementById("event_date").value;
  try {
    if (eventDate) {
      // If it's already a valid date string, convert to ISO format
      const dateObj = new Date(eventDate);
      if (!isNaN(dateObj.getTime())) {
        eventDate = dateObj.toISOString();
      } else {
        eventDate = null;
      }
    } else {
      eventDate = null;
    }
  } catch (e) {
    eventDate = null;
  }

  const data = {
    name: document.getElementById("name").value.trim(),
    email: document.getElementById("email").value.trim(),
    guests: document.getElementById("guests").value || 1,
    notes: document.getElementById("notes").value.trim(),
    event_id: document.getElementById("event_id").value,
    event_name: document.getElementById("event_name").value,
    event_location: document.getElementById("event_location").value,
    event_date: eventDate
  };

  try {
    //submit rsvp
    const response = await fetch("/submit-rsvp", {
      method: "POST",
      headers: {"Content-Type": "application/json"},
      body: JSON.stringify(data)
    });
    //error catching
    if (!response.ok) {
      console.error("Server returned an error");
      alert("‚ùå Error submitting RSVP. Please try again.");
      return;
    }

    // success
    document.getElementById("rsvp-form").style.display = "none";
    document.getElementById("confirmation").style.display = "block";
    //back to feed button
    document.getElementById("back-to-feed").addEventListener("click", () => {
      window.location.replace("/feed");
    });

  } catch (err) {
    //error catching
    console.error("RSVP submission error:", err);
    alert("‚ùå Error submitting RSVP. Please try again.");
  }
});
</script>
